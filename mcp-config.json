{
  "mcpServers": {
    "secure-fileserver": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "DEMO_MODE": "true",
        "SECURE_ROOT_PATH": "./demo-files",
        "ALLOWED_EXTENSIONS": ".txt,.json,.sql,.db,.sqlite,.md,.csv,.xml,.yaml,.yml",
        "MAX_FILE_SIZE": "10485760",
        "RATE_LIMIT_POINTS": "1000",
        "RATE_LIMIT_DURATION": "60"
      }
    }
  }
}
